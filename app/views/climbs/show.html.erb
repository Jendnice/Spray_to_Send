<h1>The Climb:</h1>

<h2><i><%= @climb.name %></i></h2>

<h3>Grade: <%= @climb.grade.capitalize %></h3></br>

<p><b>Description:</b> <%= @climb.description%> </p></br>


<% if @climb.reviews.present? %>
    <%= link_to "The Spray-down", climb_reviews_path(@climb) %> </br>
    <%= link_to "Add Spray", new_climb_review_path(@climb)%>
<% else %>
    <%= link_to "Add Spray", new_climb_review_path(@climb)%>
<% end %>






