<%= render partial: 'layouts/errors', locals:{object: @climb}%>
<%= form_for(@climb) do |f| %>
<div>
    <%= f.label :name %>
    <%= f.text_field :name%>
</div>

<div>
    <%= f.label :grade %>
    <%= f.text_field :grade %>
</div>

<div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </ br>
</div> 

<p>Please select a location: <%= f.collection_select :location_id, @locations, :id, :name, include_blank: "Pick one" %></p>

<p>Or create a new location:
<%= f.fields_for :location do |l| %></br>
    <%= l.text_field :name %>
<% end %></p>
<br />
<%= f.submit %>

<% end %>