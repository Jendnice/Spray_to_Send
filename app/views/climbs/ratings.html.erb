<h1>Welcome to the ratings page!</h1>

</br>
<% @climbs.each do |c| %>
    <h2><%= link_to c.name, climb_path(c)  %> - <%= c.grade %> </h2>
    <ul>
    <% c.reviews.each do |r| %>
        <h4><li> &nbsp; &nbsp; &nbsp; &nbsp; <i><%= link_to r.title, review_path(r) %> - <%= pluralize(r.stars, "star") %></i></li></h4>
    <% end %>
    </br>
   </ul>
<% end %>
</br>

